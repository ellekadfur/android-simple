<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Countries" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Countries" parent="Base.Theme.Countries" />

    <style name="table_row_item" parent="@android:style/TextAppearance.Small">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginRight">0.2dp</item>
        <item name="android:layout_marginEnd">0.2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="minHeight">40dp</item>
        <item name="background">@color/white</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="table_header" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/material_on_surface_disabled</item>
        <item name="android:layout_marginRight">0.2dp</item>
        <item name="android:layout_marginEnd">0.2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>
</resources>